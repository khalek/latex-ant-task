<project xmlns:au="antlib:org.apache.ant.antunit" >
				
	<property file="test.properties" /> 
			
	<taskdef name="latex" 
		classname="se.khalek.ant.LaTeXTask"
		classpath="${compile.classpath}"/>


	<target name="setUp">
		<au:logcapturer/>
	</target>
			
	<!-- test without source file -->
	<target name="testExecutionNoSource">
		<au:expectfailure message="no latex source file was given.">
			<latex/>
		</au:expectfailure>
	</target>

	<!-- test that actual file exists -->
	<target name="testRealFileExist">
		<latex source="simple-article.tex" workingdir="${test.directory}/samples"/>
	</target>

	<!-- test abnormal way to define working directory -->
	<target name="testAbnormalDirectory">
		<latex source="simple-article.tex" workingdir="${test.directory}/../antunit/samples"/>
	</target>

</project>
